{
  "compilerOptions": {
    "target": "es6",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "paths": {
      "@packages/common/*": ["../packages/common/src/*"],
      "@packages/atoms/*": ["../packages/atoms/src/*"],
      "@packages/molecules/*": ["../packages/molecules/src/*"],
      "@packages/organisms/*": ["../packages/organisms/src/*"]
    }
  },
  "include": ["src", "types", "../packages/common/src/theme.d.ts"],
  "exclude": ["node_modules"]
}
