{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "es6",
    "moduleResolution": "node",
    "lib": ["es6"],
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "declaration": true,
    "baseUrl": ".",
    "paths": {
      "@packages/common/*": ["../packages/common/src/*"]
    },
    "types": ["node", "express"]
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
