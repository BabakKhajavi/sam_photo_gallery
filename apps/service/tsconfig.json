{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "es6",
    "moduleResolution": "node",
    "lib": ["es6"],
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "declaration": true,
    "baseUrl": ".",
    "paths": {
      "@packages/common/*": ["../packages/common/src/*"]
    },
    "types": ["node", "express"],
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "../../packages/common/src/**/*.ts",
    "../../packages/common/src/**/*.d.ts",
    "../../packages/common/src/declarations.d.ts"
  ],
  "exclude": ["node_modules", "dist"]
}
